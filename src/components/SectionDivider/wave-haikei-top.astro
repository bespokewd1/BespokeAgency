---
import { cn } from '@lib/utils';
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'svg'>;

const { class: className, ...rest } = Astro.props;
const mobileClass = cn(' block sm:hidden', className);
const tabletClass = cn('hidden sm:max-lg:block ', className);
const desktopClass = cn('hidden lg:block', className);
---

<!-- mobile -->
<svg
  class={mobileClass}
  {...rest}
  viewBox="0 0 450 900"
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
  version="1.1"
  ><path
    d="M0 75L45 75L45 79L90 79L90 67L135 67L135 80L180 80L180 77L225 77L225 102L270 102L270 70L315 70L315 113L360 113L360 67L405 67L405 89L450 89L450 71L450 0L450 0L405 0L405 0L360 0L360 0L315 0L315 0L270 0L270 0L225 0L225 0L180 0L180 0L135 0L135 0L90 0L90 0L45 0L45 0L0 0Z"
    fill="#dbeafe"
    stroke-linecap="square"
    stroke-linejoin="miter"></path></svg
>

<!-- tablet -->
